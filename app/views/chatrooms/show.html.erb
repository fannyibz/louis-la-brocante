<div class="container white-container">
  <h1>#<%= @chatroom.name %></h1>
  <h4 class="text-center"><%= "Vendeur: #{@ad.user.email} / Acheteur: #{@chatroom.user.email}"%></h4>
  <div class="is-flex">
    <div class="container chat-box">
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <div class="message-container" id="message-<%= message.id %>">
            <i class="author">
              <span><%= message.user.email %></span>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%= message.content %></p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="container">
      <%= simple_form_for [ @ad, @chatroom, @message], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "..." %>
        <%= f.hidden_field :ad_id, value: @ad.id %>
        <%= f.hidden_field :chatroom_id, value: @chatroom.id %>
        <%= f.button :submit, class:"btn btn-success btn-personalised" %>
      <% end %>
    </div>
  </div>
</div>
