<div class="container mb-5">
  <%= simple_form_for(@ad) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, label: "Nom" %>
      <%= f.input :department, label: "Catégorie" %>
      <%= f.input :description, label: "Quelques précisions..." %>
      <%= f.input :price, label: "Prix" %>
      <%= f.input :photo, label: "Ajouter des photos", as: :file, required: true, input_html: {} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"btn btn-success mt-3" %>
    </div>
  <% end %>
</div>
